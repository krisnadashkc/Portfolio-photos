<script>// Function to fade in container content
function fadeInContainer() {
  const textDiv = document.querySelector(".container h2");
  const paragraphs =
document.querySelectorAll(".contents p");       
  // select the text div
  const profileImg = document.querySelector(".container .profilepicture"); // select the image

  // Set opacity to 1 to fade in
  textDiv.style.opacity = "1"; 
  paragraphs.forEach(p => {
    p.style.opacity = "1"
  });
  profileImg.style.opacity = "1";
}

// Run the function when the page loads
window.onload = fadeInContainer;
</script>

